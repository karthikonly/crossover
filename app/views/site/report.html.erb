<h1>Support Requests Closed in last month</h1>

<p>
  Generated by: <%= current_user.fullname %> &lt;<%= current_user.email %>&gt;
</p>

<p>
  Total Closed Requests in last 1 month: <%= @support_requests.length %>
</p>

<table>
  <thead>
    <tr>
      <th>Created Date</th>
      <th>Customer</th>
      <th>Product</th>
      <th>Last Agent</th>
      <th>Title</th>
    </tr>
  </thead>

  <tbody>
    <% @support_requests.each do |support_request| %>
      <tr>
        <td><%= support_request.created_at.to_date %></td>
        <td><%= support_request.creator.fullname %></td>
        <td><%= support_request.product.name %></td>
        <td><%= support_request.handler.try(:fullname) %></td>
        <td><%= support_request.title %></td>
      </tr>
      <% support_request.support_logs.each do |support_log| %>
        <tr>
          <td></td>
          <td><%= support_log.user.fullname %></td>
          <td colspan="3"><%= support_log.content %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
