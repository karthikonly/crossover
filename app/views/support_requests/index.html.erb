<h1>Support Requests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Creator</th>
      <th>Handler</th>
      <th>Product</th>
      <th>Request state</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @support_requests.each do |support_request| %>
      <tr>
        <td><%= support_request.title %></td>
        <td><%= support_request.creator %></td>
        <td><%= support_request.handler %></td>
        <td><%= support_request.product %></td>
        <td><%= support_request.request_state %></td>
        <td><%= link_to 'Show', support_request %></td>
        <td><%= link_to 'Edit', edit_support_request_path(support_request) %></td>
        <td><%= link_to 'Destroy', support_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Support request', new_support_request_path %>
