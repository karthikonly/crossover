<h1>Support Requests</h1>

<p>
  Total Support Requests: <%= @support_requests.length %>
</p>

<table>
  <thead>
    <tr>
      <th>Opened Date</th>
      <th>Creator</th>
      <th>Product</th>
      <th>Last Agent</th>
      <th>Request state</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @support_requests.each do |support_request| %>
      <tr>
        <td><%= support_request.created_at.to_date %></td>
        <td><%= support_request.creator.fullname %></td>
        <td><%= support_request.product.name %></td>
        <td><%= support_request.handler.try(:fullname) %></td>
        <td><%= support_request.request_state.name %></td>
        <td><%= support_request.title %></td>
        <td><%= link_to 'Show', support_request %></td>
        <td><%= link_to 'Edit', edit_support_request_path(support_request) %></td>
        <td><%= link_to 'Destroy', support_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
